<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_photo"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:transitionName="img_detail_story"
        android:contentDescription="@string/desc_image_story"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            tools:text="Ini adalah waktu mamang bersama mumung di antara mumung" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="12dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                app:drawableStartCompat="@drawable/ic_baseline_person_24"
                tools:text="Mamang Sumamang" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                app:drawableStartCompat="@drawable/ic_baseline_location_on_24"
                tools:text="Mamang Sumamang" />
        </LinearLayout>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:drawablePadding="2dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            tools:text="Diupload tanggal..." />
    </LinearLayout>

</LinearLayout>